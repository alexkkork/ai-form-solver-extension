{
  "manifest_version": 3,
  "name": "AI Form Solver",
  "version": "3.0.3",
  "description": "Automatically solve forms using ChatGPT or Gemini AI",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "khan-api.js"],
      "matches": ["https://*.khanacademy.org/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Form Solver"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}